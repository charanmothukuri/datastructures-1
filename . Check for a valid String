#include <stdio.h>
#include <string.h>

int main() {
    char str1[] = "Hello, world!";
    char str2[] = "";

    if (strlen(str1) > 0) {
        printf("str1 is a valid string.\n");
    } else {
        printf("str1 is an invalid string.\n");
    }

    if (strlen(str2) > 0) {
        printf("str2 is a valid string.\n");
    } else {
        printf("str2 is an invalid string.\n");
    }

    return 0;
}
